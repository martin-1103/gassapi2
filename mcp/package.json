{
  "name": "gassapi-mcp-client",
  "version": "1.0.0",
  "description": "AI-powered API testing with Claude Desktop integration",
  "main": "dist/index.js",
  "type": "module",
    "bin": {
    "gassapi-mcp": "bin/gassapi-mcp.js"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/gassapi-mcp.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run lint && npm run clean && npm run build"
  },
  "keywords": [
    "api",
    "testing",
    "claude",
    "mcp",
    "model-context-protocol",
    "gassapi",
    "automation",
    "typescript"
  ],
  "author": "GASSAPI Team",
  "license": "MIT",
  "homepage": "https://docs.gassapi.com/mcp-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/gassapi/mcp-client"
  },
  "bugs": {
    "url": "https://github.com/gassapi/mcp-client/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "directories": {
    "bin": "bin",
    "lib": "dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "abort-controller": "^3.0.0",
    "follow-redirects": "^1.15.11",
    "form-data": "^4.0.4",
    "joi": "^17.13.3",
    "jsonpath-plus": "^8.1.0",
    "mustache": "^4.2.0",
    "performance-now": "^2.1.0",
    "readline-sync": "^1.4.10",
    "uuid": "^9.0.1",
    "vm2": "^3.9.19",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/follow-redirects": "^1.14.4",
    "@types/jest": "^29.0.0",
    "@types/joi": "^17.2.3",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20.19.22",
    "@types/node-fetch": "^2.6.13",
    "@types/readline-sync": "^1.4.8",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "node-fetch": "^3.3.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/tools/**/*.ts",
      "!src/tools/**/*.d.ts",
      "!src/tools/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": false,
          "tsconfig": {
            "module": "commonjs",
            "esModuleInterop": true
          }
        }
      ]
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
