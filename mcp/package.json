{
  "name": "gassapi-mcp-client",
  "version": "1.0.0",
  "description": "AI-powered API testing with Claude Desktop integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "gassapi-mcp": "bin/gassapi-mcp"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/gassapi-mcp",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run lint && npm run clean && npm run build"
  },
  "keywords": [
    "api",
    "testing",
    "claude",
    "mcp",
    "model-context-protocol",
    "gassapi",
    "automation",
    "typescript"
  ],
  "author": "GASSAPI Team",
  "license": "MIT",
  "homepage": "https://docs.gassapi.com/mcp-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/gassapi/mcp-client"
  },
  "bugs": {
    "url": "https://github.com/gassapi/mcp-client/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "directories": {
    "bin": "bin",
    "lib": "dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.22",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "node-fetch": "^3.3.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/tools/**/*.ts",
      "!src/tools/**/*.d.ts",
      "!src/tools/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", {
        "useESM": false,
        "tsconfig": {
          "module": "commonjs",
          "esModuleInterop": true
        }
      }]
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
