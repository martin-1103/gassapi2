{
  "compilerOptions": {
    // Phase 1: Module Configuration Update
    "target": "ES2020",         // Target ES2020 untuk compatibility dengan MCP
    "module": "ES2020",         // ES2020 modules untuk MCP compatibility
    "moduleResolution": "node", // Set moduleResolution ke "node" untuk ES modules
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, // Type safety dinonaktifkan sementara untuk ES modules migration
    "strictNullChecks": false, // Null safety dinonaktifkan sementara
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false, // Tetap false untuk menghindari breaking changes
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "compiler": "tsm"
  }
}